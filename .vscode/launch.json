{
	// Use IntelliSense to learn about possible attributes.
	// Hover to view descriptions of existing attributes.
	// For more information, visit: https://go.microsoft.com/fwlink/?linkid=830387
	"version": "0.2.0",
	"configurations": [
		// live server chrome debug port 5500
		{
			"type": "chrome",
			"request": "launch",
			"name": "Live Server",
			"url": "http://localhost:5500/docs/index.html",
			"webRoot": "${workspaceFolder}/docs"
		},
		{
			"type": "chrome",
			"request": "launch",
			"name": "select.html",
			"file": "${workspaceFolder}/docs/select.html"
		},
		{
			"type": "node",
			"request": "launch",
			"name": "generate",
			"program": "${workspaceFolder}/bin/generate.js",
			"args": ["tr"], // Komut satırı argümanları (isteğe bağlı)
			"console": "integratedTerminal",
			"skipFiles": ["<node_internals>/**"]
		},
		{
			"type": "node",
			"request": "launch",
			"name": "check",
			"program": "${workspaceFolder}/bin/check.js",
			"args": ["empty"], // Komut satırı argümanları (isteğe bağlı)
			"console": "integratedTerminal",
			"skipFiles": ["<node_internals>/**"]
		}
	]
}
